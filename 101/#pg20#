#include <stdio.h>
#include <math.h>

int main( int argc, char *argv[] ) {
 

 float r, area ;
 
 printf( "Please enter the radius of the circle: " ) ;
 
 scanf( "%f", &r ) ;
 area = M_PI * ( r * r ) ; 

 printf( "The area of the circle is %f", area ) ;

 
  return  0 ;

}

