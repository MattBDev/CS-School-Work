#include <stdio.h>

int main( int argc, char *argv[] ) {

  int l, h, i, j ; 

  printf( "\n Please enter a positive value for the length of a box of asterisks. \n") ;

  scanf( "%d", &l ) ;

  printf( "\n Please enter a positive value for the height of a box of asterisks. \n" ) ; 

  scanf( "%d", &h ) ; 

  if( ( 0 < l && l < 21 ) || ( 0 < h && h  < 21 ) ) {

    for(i = 0; i < h; i++) {

      printf( "\n" ) ; 

      for(j = 0; j < l; j++) {

	printf("*");

      }

    }

  }

  else ( printf( "Please enter a value less than 21 or greater than 0." ) ) ;
    
  printf( "\n\n" ) ; 

  return  0 ;
}

