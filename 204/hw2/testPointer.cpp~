//This is a conversion of testPointer.c to a c++ file.

#include <iostream>

using namespace std ; 

void swap( int *pi, int *pj ) {

  int tmp ;
  tmp = pi ;
  pi = pj ;
  pj = tmp ;   

  cout << "in swap : "  << pi << " "  << pj << endl ;
  return ; 

}

main() {

  int i = 0, j = 1 ;

  swap( &i, &j ) ;
  cout << " The values are : " << i << " " << j << endl ; 

  return 0 ; 

}
